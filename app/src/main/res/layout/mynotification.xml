<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="64sp">

    <TextView
        android:id="@+id/nf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12sp"
        android:layout_marginTop="12sp"
        android:text="新商品热卖"
        android:textSize="14sp"
        android:textColor="@color/grey_black"/>
    <TextView
        android:id="@+id/nf_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nf_title"
        android:layout_below="@id/nf_title"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:text="Ferrero Rocher"/>

    <ImageView
        android:id="@+id/nf_img"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/nf_title"
        android:layout_marginEnd="10sp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ferrero" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="213sp"
                app:srcCompat="@drawable/ferrero"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8sp"
                android:layout_marginTop="8sp" />

            <ImageButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/empty_star"
                android:layout_alignParentStart="true"
                android:layout_marginStart="300sp"
                android:layout_alignBottom="@+id/item_detail_name"/>

            <TextView
                android:id="@+id/item_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/item_image"
                android:layout_marginStart="19dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey_black"
                android:text="￥132.59" />

            <TextView
                android:id="@+id/item_detail_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_detail_price"
                android:layout_below="@+id/item_detail_price"
                android:layout_marginTop="9dp"
                android:textColor="@color/grey"
                android:text="重量 300g" />

            <TextView
                android:id="@+id/item_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferrero Rocher"
                android:textSize="18sp"
                android:textColor="@color/grey_black"
                android:layout_above="@+id/item_detail_price"
                android:layout_alignStart="@+id/back"
                android:layout_marginBottom="17dp" />

            <ImageButton
                android:id="@+id/buy"
                android:layout_width="70sp"
                android:layout_height="70sp"
                app:srcCompat="@drawable/shoplist"
                android:scaleType="centerInside"
                android:backgroundTint="@color/white"
                android:layout_below="@+id/item_image"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:layout_alignBottom="@+id/buy"
                app:srcCompat="@color/line_color" />

            <ImageView
                android:id="@+id/line7"
                android:layout_width="1sp"
                android:layout_alignStart="@+id/buy"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buy"
                android:layout_marginEnd="5sp"
                app:srcCompat="@color/line_color"
                android:layout_alignTop="@+id/buy"/>

            <TextView
                android:id="@+id/more_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="更多产品信息"
                android:layout_below="@+id/line1"
                android:textColor="@color/grey_black"
                android:layout_alignStart="@+id/item_detail_other" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="10sp"

                android:layout_marginTop="10sp"
                android:layout_below="@+id/more_item"
                app:srcCompat="@color/line_color" />

            <TextView
                android:id="@+id/list1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/more_item"
                android:layout_below="@+id/line2"
                android:textColor="@color/grey_black"
                android:layout_marginTop="10dp"
                android:text="一键下单" />
            <ImageView
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/list1"
                app:srcCompat="@color/line_color" />
            <TextView
                android:id="@+id/list2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/more_item"
                android:layout_below="@+id/line3"
                android:textColor="@color/grey_black"
                android:layout_marginTop="10dp"
                android:text="分享商品" />
            <ImageView
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/list2"
                app:srcCompat="@color/line_color" />
            <TextView
                android:id="@+id/list3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/more_item"
                android:layout_below="@+id/line4"
                android:textColor="@color/grey_black"
                android:layout_marginTop="10dp"
                android:text="不感兴趣" />
            <ImageView
                android:id="@+id/line5"
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/list3"
                android:layout_marginTop="10sp"
                app:srcCompat="@color/line_color" />
            <TextView
                android:id="@+id/list4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/more_item"
                android:layout_below="@+id/line5"
                android:textColor="@color/grey_black"
                android:layout_marginTop="10dp"
                android:text="查看更多商品促销信息" />
            <ImageView
                android:id="@+id/line6"
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/list4"
                android:layout_marginTop="10sp"
                app:srcCompat="@color/line_color" />
        </RelativeLayout>
    </ScrollView>



</LinearLayout>